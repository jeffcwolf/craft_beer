<div class="container">


<h1>API Results Here</h1>

<p>Your list of "<%= @endpoint %>"" that have the parameter "<%= @parameter %>" of value "<%= @value %>":</p>

<h3>Breweries</h3>

<% @parsed_results["data"].each do |result| %>
    <li>Name: <%= result["name"] %></li>
    <li>Description: <%= result["description"] %></li>
    <li><%= @parameter %>: <%= result[@parameter] %></li>
    <br>
  <% end %>

</div>
